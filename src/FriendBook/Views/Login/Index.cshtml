@model FriendBook.ViewModels.LoginViewModel

    <br /><br />
    <div class="LoginOrRegister">
        <div class="row LoginNav">
            <h2>FriendBook</h2>
            @*<a class="col-md-offset-2 col-md-2 showLogin">Login</a>*@
            @*<a class="col-md-offset-4 col-md-2 showRegister">Register</a>*@
            <a class="active showLogin" >Login</a>
            <a class="showRegister">Register</a>
        </div>
        <form class="Login" asp-action="LoginUser">
            <div class="form-horizontal">
                <p class="TotalLoginValidation val"></p>
                <div class="form-group">
                    <label asp-for="@Model.User.Email" class="col-lg-3 control-label">Email: </label>
                    <div class="col-md-9">
                        <input type="text" asp-for="@Model.User.Email" class="form-control email" />
                        <p class="LoginEmailValidation val"></p>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.User.Password" class="col-lg-3 control-label">Password: </label>
                    <div class="col-md-9">
                        <input type="password" asp-for="@Model.User.Password" class="form-control password" />
                        <p class="LoginPasswordValidation val"></p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="button" value="Login" class="btn btn-default submitLogin" />
                    </div>
                </div>
            </div>
        </form>

        <form class="Register">
            <div class="form-horizontal">
                <p class="TotalRegisterValidation val"></p>
                <div class="form-group">
                    <label asp-for="@Model.User.FirstName" class="col-lg-3 control-label">First Name: </label>
                    <div class="col-md-9">
                        <input type="text" asp-for="@Model.User.FirstName" class="form-control registerFN" />
                        <p class="RegisterFirstNameValidation val"></p>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.User.LastName" class="col-lg-3 control-label">Last Name: </label>
                    <div class="col-md-9">
                        <input type="text" asp-for="@Model.User.LastName" class="form-control registerLN" />
                        <p class="RegisterLastNameValidation val"></p>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.User.Email" class="col-lg-3 control-label">Email: </label>
                    <div class="col-md-9">
                        <input type="text" asp-for="@Model.User.Email" class="form-control registerEmail" />
                        <p class="RegisterEmailValidation val"></p>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.User.Password" class="col-lg-3 control-label">Password: </label>
                    <div class="col-md-9">
                        <input type="password" asp-for="@Model.User.Password" class="form-control registerPass" />
                        <p class="RegisterPasswordValidation val"></p>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-lg-3 control-label">Confirm password: </label>
                    <div class="col-md-9">
                        <input type="password" class="form-control registerConfirmPass" />
                        <p class="ConfirmPasswordValidation val"></p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="button" value="Register" class="btn btn-default submitRegister" />
                    </div>
                </div>
            </div>
        </form>
    </div>
